package basicUI;

import java.awt.Dimension;
import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.Insets;

import javax.swing.JFrame;

import character.GameCharacter;

@SuppressWarnings("serial")
public class TestAppWindow extends JFrame {

	private static final Dimension DEFAULT_SIZE = new Dimension(800, 600);

	private TestCharacterDisplay selectedCharacter;
	private TestCharacterDisplay activeCharacter;

	private TestBattleDisplay battleDisplay;

	private TestTurnOrderDisplay turnOrderDisplay;

	private TestSkillsDisplay skillsDisplay;

	public TestAppWindow() {

		setPreferredSize(DEFAULT_SIZE);
		setSize(DEFAULT_SIZE);

		GridBagConstraints c = new GridBagConstraints();
		setLayout(new GridBagLayout());

		selectedCharacter = new TestCharacterDisplay();
		activeCharacter = new TestCharacterDisplay();
		battleDisplay = new TestBattleDisplay();
		turnOrderDisplay = new TestTurnOrderDisplay();
		skillsDisplay = new TestSkillsDisplay();

		c.gridx = 0;
		c.gridy = 0;
		c.insets = new Insets(5, 5, 5, 5);
		add(activeCharacter, c);

		c.gridy = 1;
		add(selectedCharacter, c);

		c.gridx = 1;
		c.gridy = 0;
		c.gridheight = 2;
		c.weightx = 1;
		c.fill = GridBagConstraints.BOTH;
		add(battleDisplay, c);

		c.gridx = 2;
		c.weightx = 0;
		c.fill = GridBagConstraints.VERTICAL;
		add(turnOrderDisplay, c);

		c.gridx = 0;
		c.gridy = 2;
		c.gridwidth = 3;
		c.gridheight = 1;
		c.fill = GridBagConstraints.BOTH;
		add(skillsDisplay, c);

		GameCharacter character = new GameCharacter();
		activeCharacter.setDisplayedCharacter(character);

		validate();
		setVisible(true);
	}

	public static void main(String[] args) {
		new TestAppWindow();
	}
}