package animation.queue;

public class AnimationQueueElement {
	
	private AnimationQueueElement next;

	public AnimationQueueElement getNext() {
		return next;
	}

	public void setNext(AnimationQueueElement next) {
		this.next = next;
	}
	
	private String action;
	public String getAction() {
		return action;
	}
	public void setAction(String action) {
		this.action = action;
	}
	
	private int[] orientation;
	public int[] getOrientation() {
		return orientation;
	}
	public void setOrientation(int[] orientation) {
		this.orientation = orientation;
	}

	public AnimationQueueElement(String str, int[] orientation){
		setAction(str);
		setOrientation(orientation);
	}
	
	public String toString(){
		return action+" towards "+orientation[0]+";"+orientation[1];
	}

}
