package basicUI;

import javax.swing.BorderFactory;
import javax.swing.BoxLayout;
import javax.swing.JPanel;
import javax.swing.border.BevelBorder;

import skills.Skill;
import skills.factory.SkillFactory;

public class TestSkillsDisplay extends JPanel {

	public TestSkillsDisplay() {
		super();

		setLayout(new BoxLayout(this, BoxLayout.LINE_AXIS));
		setBorder(BorderFactory.createBevelBorder(BevelBorder.RAISED));

		Skill attack = SkillFactory.initSkills("Paladin").get("Frappe intimidante");
		for (int i = 0; i<10; i++){
			add(new TestSingleSkillDisplay(attack));
		}
	}

}
