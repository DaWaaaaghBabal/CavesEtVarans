package sprite.framework;

import java.awt.Graphics2D;
import java.awt.Point;
import java.util.List;
import java.util.Map;
import java.util.Set;

public class GraphicsContainer extends GraphicsElement {

	/* Return all children, sorted by Z index. 
	 * Children are stored as a Map to keep track of depth, 
	 * but the result is a List.
	 */
	private Map<Integer, Set<GraphicsElement>> children;
	private List<GraphicsElement> getChildren() {
		// TODO Auto-generated method stub
		return null;
	}
	
	public void paint(Graphics2D g) {
		for (GraphicsElement element : getChildren()) {
			element.animationStep();
		}
	}

	public void animationStep() {
		for (GraphicsElement element : getChildren()) {
			element.animationStep();
		}
	}

	protected boolean isInside(Point point) {
		// As a container, this never handles mouse clicks. They are relayed to
		// components.
		return false;
	}

}
