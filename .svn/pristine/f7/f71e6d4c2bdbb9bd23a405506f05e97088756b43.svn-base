package basicUI;

import java.util.Observable;
import java.util.Observer;

import javax.swing.BorderFactory;
import javax.swing.BoxLayout;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JProgressBar;
import javax.swing.border.BevelBorder;

import character.GameCharacter;

@SuppressWarnings("serial")
public class TestAPDisplay extends JPanel implements Observer{
	
	private GameCharacter character;
	
	private JProgressBar APbar;
	
	@Override
	public void update(Observable arg0, Object arg1) {
		APbar.setValue(character.getActionPoints());
	}

	public TestAPDisplay(GameCharacter character) {
		super();
		setLayout(new BoxLayout(this, BoxLayout.LINE_AXIS));
		setBorder(BorderFactory.createBevelBorder(BevelBorder.RAISED));

		APbar = new JProgressBar(120);
		APbar.setStringPainted(true);
		
		add(new JLabel(character.getName()));
		add(APbar);
		
		this.character=character;
		character.addObserver(this);
	}
	

}
